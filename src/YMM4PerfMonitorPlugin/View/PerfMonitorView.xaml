<UserControl
    x:Class="YMM4PerfMonitorPlugin.View.PerfMonitorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:epoxy="https://github.com/kekyo/Epoxy"
    xmlns:local="clr-namespace:YMM4PerfMonitorPlugin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:YMM4PerfMonitorPlugin.View"
    epoxy:Fountain.Well="{Binding MainWell}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    >
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  数値系  -->
        <StackPanel
            Grid.Column="0"
            Margin="0,0,0,8"
            Orientation="Vertical"
            >
            <TextBlock Text="{Binding FPS, StringFormat=FPS: {0:F1}}" />
            <TextBlock Text="{Binding CPU, StringFormat=CPU: {0:F1}%}" />
            <TextBlock Text="{Binding Memory, StringFormat=Memory: {0} MB}" />
            <TextBlock Text="{Binding GCInfo}" ToolTip="各世代のGC回数" />
            <TextBlock Text="{Binding DispatcherDelay, StringFormat=Dispatcher Delay: {0} ms}" />
            <TextBlock Text="{Binding ThreadCount, StringFormat=Threads: {0}}" />
        </StackPanel>

        <GridSplitter Grid.Column="1" Width="5" />

        <!--  折れ線グラフ  -->
        <Canvas Grid.Column="2" Background="Black"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            SizeChanged="Canvas_SizeChanged"
            epoxy:Fountain.Well="{Binding CanvasWell}">
            <Polyline
                x:Name="FpsLine"
                Points="{Binding FPSPoints}"
                Stroke="Lime"
                StrokeThickness="1"
                />
        </Canvas>
    </Grid>
</UserControl>
